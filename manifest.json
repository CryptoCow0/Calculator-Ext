{
	"name": "Calculator",
	"description": "A scientific calculator",
	"version": "4.11.7",

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"64": "icons/icon64.png",
		"128": "icons/icon128.png"
	},

	"action": {
		"default_title": "Calculator",
		"default_popup": "popup/index.html"
	},

	"background": {
		"service_worker": "background/update.mjs",
		"type": "module"
	},

	"permissions": [
		"storage"
	],

	"offline_enabled": true,
	"minimum_chrome_version": "88",

	"manifest_version": 3
}
